    "version": "0.2.0",

    //çalıştırıken debug yaparken run ederken ihtiyaç duyulan ayarlar:
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            
            "program": "${workspaceFolder}/bin/Debug/net5.0/consol-programlama.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            
            "console": "externalTerminal",//yazım için debug condole kullanılıyor
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}